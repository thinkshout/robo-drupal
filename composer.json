{
    "name": "thinkshout/robo-drupal",
    "description": "Robo Tasks for Drupal projects",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Tauno Hogue",
            "email": "tauno@thinkshout.com"
        }
    ],
    "conflict": {
        "drupal/core": "<9"
    },
    "autoload":
    {
        "psr-4":
        {
            "ThinkShout\\RoboDrupal\\": "src"
        }
    },
    "require": {
        "vlucas/phpdotenv": ">=5.0",
        "consolidation/robo": "^3.0 || ^4.0",
        "consolidation/annotated-command": "^4.8.2",
        "drupal/config_split": "^2.0",
        "drush/drush": "^9.6|^10.0|^11.1|^12.0",
        "genesis/behat-fail-aid": "^3.7"
    },
    "extra": {
        "drupal-scaffold": {
            "file-mapping": {
                "[project-root]/.env.dist": {
                    "path": "assets/.env.dist",
                    "overwrite": false
                },
                "[project-root]/RoboFile.php": {
                    "path": "assets/RoboFile.php",
                    "overwrite": false
                }
            }
        }
    }
}
